---
import BaseLayout from "@layouts/BaseLayout.astro";
import Gnb from "@components/commons/gnb.astro";
import IntroBackground from "@components/intro/background";
import IntroAboutMe from "@components/intro/me.astro";
import IntroLinks from "@components/intro/links.astro";
---

<BaseLayout title="Loopy's Blog - Home">
  <Gnb />
  <main class="mx-auto max-w-7xl px-4">
    <IntroBackground client:only={true} />
    <section
      class="-mb-24 flex min-h-screen flex-col items-center justify-center"
    >
      <IntroAboutMe />
      <IntroLinks />
    </section>
  </main>
</BaseLayout>
