---
import Footer from "@/components/commons/Footer.astro";
import Gnb from "@/components/commons/gnb.astro";
import "@styles/global.css";
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<html lang="ko">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Loopy's Blog | {title}</title>
  </head>
  <body
    class="bg-white text-gray-900 antialiased dark:bg-gray-900 dark:text-gray-100"
  >
    <Gnb />
    <div class="py-18"></div>
    <div class="mx-auto min-h-[calc(100vh-18rem)] max-w-5xl px-4">
      <slot />
    </div>
  </body>
  <Footer />

  <style is:global>
    html {
      scroll-behavior: smooth;
    }
  </style>
</html>
