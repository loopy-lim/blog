{
  "name": "blog",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "next dev",
    "build-data": "bun scripts/build-data.ts",
    "download-images": "bun scripts/download-images.ts",
    "build": "bun run download-images || echo '[build] image download failed; using existing cached images'; bun run build-data; bun run generate-og-images || echo '[build] OG image generation failed; using existing images'; bun run generate-rss && next build",
    "generate-og-images": "bun scripts/generate-og-images.ts",
    "generate-rss": "bun scripts/generate-rss.ts",
    "start": "python3 -m http.server 3000 --directory out",
    "lint": "oxlint .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@notionhq/client": "^5.4.0",
    "canvas": "^3.2.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.0",
    "framer-motion": "^12.34.3",
    "install": "^0.13.0",
    "konva": "^9.3.22",
    "lucide-react": "^0.575.0",
    "next": "^15.5.6",
    "nextjs-toploader": "^3.9.17",
    "react": "19",
    "react-dom": "19",
    "react-konva": "^19.0.7",
    "server-only": "^0.0.1",
    "sharp": "^0.34.3",
    "tailwind-merge": "^3.3.1",
    "unist-util-visit": "^5.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "@types/hast": "^3.0.4",
    "@types/node": "^24.2.0",
    "@types/react": "19",
    "@types/react-dom": "19",
    "autoprefixer": "^10.4.22",
    "oxlint": "^1.13.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "shiki": "^3.9.2",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.8.3"
  },
  "trustedDependencies": [
    "canvas"
  ],
  "packageManager": "bun@1.3.6"
}
